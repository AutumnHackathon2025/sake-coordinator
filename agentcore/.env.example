# ========================================
# 環境設定
# ========================================
# 環境: development | production
ENVIRONMENT=development

# ========================================
# AWS設定
# ========================================
AWS_REGION=ap-northeast-1
# 開発環境ではローカル認証情報を使用、本番環境ではIAMロールを使用
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ========================================
# AgentCore設定
# ========================================
AGENTCORE_RUNTIME_ID=
AGENTCORE_MEMORY_ID=
AGENTCORE_GATEWAY_URL=

# ========================================
# Bedrock設定
# ========================================
# モデルID: 設計書に準拠してClaude 3.5 Sonnetを使用
# Claude 3.5 Sonnet v1 (安定版)
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
BEDROCK_REGION=us-east-1
BEDROCK_MAX_TOKENS=2000
BEDROCK_TEMPERATURE=0.7
BEDROCK_TIMEOUT=15

# ========================================
# ログ設定
# ========================================
# ログレベル: DEBUG | INFO | WARNING | ERROR | CRITICAL
# 開発環境: DEBUG、本番環境: INFO
LOG_LEVEL=INFO
# ログフォーマット: json | console
LOG_FORMAT=json

# ========================================
# 推薦設定
# ========================================
# 最大推薦件数
MAX_RECOMMENDATIONS=10
# 推薦処理全体のタイムアウト（秒）
RECOMMENDATION_TIMEOUT=30
# キャッシュTTL（秒）
CACHE_TTL=600